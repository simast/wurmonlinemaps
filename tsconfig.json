{
	"compilerOptions": {
		// NOTE: "target" and "module" is for server-side code only (see webpack
		// config for client-side compiler option overrides).
		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"lib": [
			"dom",
			"dom.iterable",
			"es2015",
			"es2016",
			"es2017",
			"esnext"
		],
		"allowSyntheticDefaultImports": true,
		"importHelpers": true,
		"removeComments": true,
		"jsx": "react",
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"./src/**/*",
		"./typings/**/*"
	],
	"exclude": [
		"node_modules"
	]
}
